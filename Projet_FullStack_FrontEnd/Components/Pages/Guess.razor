                <!-- Affichage des indices r√©v√©l√©s -->
                @if (revealedHints.Any())
                {
                    <div class="revealed-hints">
                        <h4>Indices r√©v√©l√©s :</h4>
                        @foreach (var hint in revealedHints)
                        {
                            <div class="hint-item">
                                <strong>@hint.Key :</strong> @hint.Value
