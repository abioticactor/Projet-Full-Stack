@inject Microsoft.Extensions.Logging.ILogger<Components.Routes> Logger

<!-- Use component's assembly explicitly to ensure the Router finds components correctly -->
<Router AppAssembly="@typeof(Projet_FullStack_FrontEnd.Components.App).Assembly">
    <Found Context="routeData">
        @{ 
            var pageTypeName = routeData.PageType?.Name ?? "(null)";
            Logger.LogInformation("Router: rendering page {PageType}", pageTypeName);
            var useHomeLayout = pageTypeName == "Home";
            var layoutType = useHomeLayout ? typeof(Layout.HomeLayout) : typeof(Layout.MainLayout);
        }
        <RouteView RouteData="routeData" DefaultLayout="@layoutType" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <p role="alert">Désolé, cette page n'existe pas.</p>
        </LayoutView>
    </NotFound>
</Router>
